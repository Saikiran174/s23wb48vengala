extends layout

block content
  h1= title
  p There are #{query.rows} rows and #{query.cols} columns
  - let rows= Number(query.rows)
  - let cols= Number(query.cols)
  p There are #{rows} rows and #{cols} columns
  - if(!(Number.isInteger(rows)) || !(Number.isInteger(cols))) {
    p Passed arguments should be an integers
  - }
  - else if(!(rows >= 1 && rows <= 10)) {
    p rows must be in between 1 to 10
  - } 
  - else if(!(cols >= 1 && cols <= 10)) {
    p columns must be in between 1 to 10
  - }
  - else {
    br
    h5 Board table
    table#outer 
        - for(let i = 0; i < rows; i++) {
            tr#middle 
                - for(let j = 0; j < cols; j++) {
                    -if(i==j){
                        td= (1) 
                        -}                 
                    - else if(i>j){
                        td= (0)
                        -}
                    -else {
                        td= (j-i+1)
                        -}
                - }
        - }
  - }